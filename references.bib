@article{harewoodCosteffectivenessEndoscopicUltrasonography2002,
  title = {Cost-Effectiveness of Endoscopic Ultrasonography in the Evaluation of Proximal Rectal Cancer},
  author = {Harewood, Gavin C. and Wiersema, Maurits J.},
  date = {2002-04},
  journaltitle = {The American Journal of Gastroenterology},
