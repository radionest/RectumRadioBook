  author = {Zerhouni, E. A. and Rutter, C. and Hamilton, S. R. and Balfe, D. M. and Megibow, A. J. and Francis, I. R. and Moss, A. A. and Heiken, J. P. and Tempany, C. M. and Aisen, A. M. and Weinreb, J. C. and Gatsonis, C. and McNeil, B. J.},
