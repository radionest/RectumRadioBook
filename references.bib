  date = {2024},
  journaltitle = {Revista Espanola De Medicina Nuclear E Imagen Molecular},
  shortjournal = {Rev Esp Med Nucl Imagen Mol (Engl Ed)},
  volume = {43},
  number = {3},
  eprint = {38527730},
  eprinttype = {pubmed},
