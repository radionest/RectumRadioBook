  author = {Linsalata, Stefania and Borgheresi, Rita and Marfisi, Daniela and Barca, Patrizio and Sainato, Aldo and Paiar, Fabiola and Neri, Emanuele and Traino, Antonio Claudio and Giannelli, Marco},
  date = {2022},
