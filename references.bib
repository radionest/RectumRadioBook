@article{lincender-cvijeticRadiologicalImagingRectal2012,
  title = {Radiological Imaging of Rectal Cancer},
  author = {Lincender-Cvijetić, Lidija and Banjin-Čardžić, Maja and Vegar-Zubović, Sandra and Vrcić, Dunja},
