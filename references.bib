  author = {Yu, Jing and Xu, Qing and Song, Jia-Cheng and Li, Yan and Dai, Xin and Huang, Dong-Ya and Zhang, Ling and Li, Yang and Shi, Hai-Bin},
  date = {2017-05},
  journaltitle = {European Radiology},
  shortjournal = {Eur Radiol},
  volume = {27},
  number = {5},
  eprint = {27631106},
  eprinttype = {pubmed},
